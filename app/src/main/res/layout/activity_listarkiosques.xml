<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Administrador.DefinirQuestionarioParaTerminais.ListarkiosquesActivity">

    <TextView
        android:id="@+id/tv_ListarKiosque_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Selecione um Dispositivo Kiosque da Lista "
        android:textColor="@color/vermelho"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ListarKiosque_questionarioAtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="@color/vermelho"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ListarKiosque_novoQuestionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="@color/vermelho"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_ListarKiosque_Confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="clikouConfirmarQuestionarioKiosque"
        android:padding="8dp"
        android:text="Confirmar"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Kiosques"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp" />
</LinearLayout>